{
  "name": "shintolin",
  "version": "0.0.0",
  "private": true,
  "main": "server.js",
  "license": "MIT",
  "dependencies": {
    "babel-cli": "^6.26.0",
    "babel-plugin-transform-flow-strip-types": "^6.22.0",
    "babel-preset-node6": "^11.0.0",
    "babel-preset-stage-2": "^6.24.1",
    "babel-preset-stage-3": "^6.24.1",
    "concurrently": "^3.5.0",
    "db-migrate": "troygoode/node-db-migrate#patch-1",
    "db-migrate-boilerplate": "^1.0.0",
    "db-migrate-pg": "^0.1.11",
    "dotenv": "^4.0.0",
    "express": "^4.15.4",
    "flow-bin": "^0.53.1",
    "jsonwebtoken": "^7.4.3"
  },
  "scripts": {
    "test": "yarn run lint && yarn run flow && yarn run test-server && (cd client && CI=true exec yarn test)",
    "test-server": "echo TEST",
    "create-migration": "db-migrate create --",
    "migrate-down": "db-migrate down",
    "migrate-up": "db-migrate up",
    "reset": "dropdb shintolin; createdb shintolin; yarn run migrate-up",
    "start": "flow && concurrently \"yarn run server\" \"yarn run client\"",
    "server": "babel-watch server/index.js",
    "client": "(cd client && exec yarn start)",
    "flow": "flow; test $? -eq 0 -o $? -eq 2",
    "storybook": "(cd client && exec yarn run storybook)",
    "lint": "eslint .",
    "heroku-postbuild": "(cd client && yarn install && yarn run build-all && yarn run migrate-up)",
    "heroku-start": "babel-node server/index.js"
  },
  "devDependencies": {
    "babel-eslint": "^7.2.3",
    "babel-watch": "^2.0.7",
    "eslint": "^4.5.0",
    "eslint-config-standard": "^10.2.1",
    "eslint-plugin-flowtype": "^2.35.0",
    "eslint-plugin-import": "^2.7.0",
    "eslint-plugin-node": "^5.1.1",
    "eslint-plugin-promise": "^3.5.0",
    "eslint-plugin-react": "^7.3.0",
    "eslint-plugin-standard": "^3.0.1"
  }
}
